{%- capture copyright_info -%}Copyright &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.{%- endcapture -%}
<section class="section__footer-links" data-section-id="{{ section.id }}" data-section-type="footer-links" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="footer-links">
      <ul class="footer-links__list">
        {%- for block in section.blocks -%}
          <li class="footer-links__link-item">
            <a href="{{ block.settings.link }}" class="footer-links__link" {{ block.shopify_attributes }}>
              {{- block.settings.title | escape -}}
            </a>
          </li>
        {%- endfor -%}
      </ul>
      <div class="footer-links__copyright">
        {{- copyright_info -}}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Footer links",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Your link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Link",
      "name": "Footer links",
      "settings": {},
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["*"],
    "groups": ["footer"]
  }
}
{% endschema %}