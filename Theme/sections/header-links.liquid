<section class="section__header-links" data-section-id="{{ section.id }}" data-section-type="header-links" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="header-links">
      <ul class="header-links__list">
        {%- for block in section.blocks -%}
          <li class="header-links__link-item">
            <a href="{{ block.settings.link }}" class="header-links__link" {{ block.shopify_attributes }}>
              {{- block.settings.title | escape -}}
            </a>
          </li>
        {%- endfor -%}
        {%- if shop.customer_accounts_enabled -%}
          <li class="header-links__link-item">
            {%- if customer -%}
              <a href="{{ routes.account_url }}" class="header-links__link">
                {{ 'header.general.welcome' | t: first_name: customer.first_name | truncate: 20 }}
              </a>
            {%- else -%}
              <a href="{{ routes.account_login_url }}" class="header-links__link">
                {{ 'header.general.login' | t }}
              </a>
            {%- endif -%}
          </li>
        {%- endif -%}
      </ul>
    </div>
  </div>
</section>

