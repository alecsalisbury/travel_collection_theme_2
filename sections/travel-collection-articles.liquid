{% comment %}
  Travel Collection Articles Section
  Displays featured blog posts from the collection metafield
{% endcomment %}

{%- liquid
  assign featured_blogs = collection.metafields.travel.featured_blogs
-%}

<style>
  .travel-articles {
    padding: 80px 40px 40px 40px;
    background-color: #E7E9EB;
  }

  .travel-articles__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .travel-articles__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 50px;
  }

  .travel-articles__header-left {
    flex: 1;
  }

  .travel-articles__heading {
    font-size: 48px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 12px;
    line-height: 1;
    letter-spacing: -1px;
  }

  .travel-articles__subheading {
    font-size: 16px;
    line-height: 1.5;
    color: #000000;
  }

  .travel-articles__view-all {
    display: inline-block;
    padding: 14px 32px;
    background-color: #3E90C5;
    color: #FFFFFF;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .travel-articles__view-all:hover {
    background-color: #2E7AAC;
  }

  .travel-articles__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 18px;
  }

  .travel-article-card {
    background-color: #FFFFFF;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none !important;
    color: inherit;
  }

  .travel-article-card * {
    text-decoration: none !important;
  }

  .travel-article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
  }

  .travel-article-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background-color: #D0D0D0;
    flex-shrink: 0;
  }

  .travel-article-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .travel-article-card:hover .travel-article-card__image {
    transform: scale(1.05);
  }

  .travel-article-card__content {
    padding: 18px 14px 14px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .travel-article-card__title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 8px;
    line-height: 1.3;
    color: #000000;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 47px;
  }

  .travel-article-card__excerpt {
    font-size: 14px;
    line-height: 1.6;
    color: #666666;
    margin-bottom: 12px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 67px;
  }

  .travel-article-card__button {
    display: block;
    width: 100%;
    padding: 10px 16px;
    background-color: #F0F0F0;
    color: #000000;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 12px;
    font-weight: 700;
    letter-spacing: 1px;
    transition: background-color 0.3s ease;
  }

  .travel-article-card:hover .travel-article-card__button {
    background-color: #E0E0E0;
  }

  @media (max-width: 1024px) {
    .travel-articles__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .travel-articles {
      padding: 50px 20px 25px 20px;
    }

    .travel-articles__header {
      flex-direction: column;
      gap: 20px;
    }

    .travel-articles__heading {
      font-size: 36px;
    }

    .travel-articles__view-all {
      align-self: flex-start;
    }

    .travel-articles__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% if featured_blogs and featured_blogs.value and featured_blogs.value.size > 0 %}
<section class="travel-articles">
  <div class="travel-articles__container">

    <div class="travel-articles__header">
      <div class="travel-articles__header-left">
        {% if section.settings.show_heading %}
          <h2 class="travel-articles__heading">{{ section.settings.heading_text }}</h2>
        {% endif %}
        {% if section.settings.show_subheading and section.settings.subheading_text != blank %}
          <p class="travel-articles__subheading">{{ section.settings.subheading_text }}</p>
        {% endif %}
      </div>
      {% if section.settings.show_view_all %}
        {% assign button_url = section.settings.view_all_url | default: '/blogs/all' %}
        <a href="{{ button_url }}" class="travel-articles__view-all">
          {{ section.settings.view_all_text }}
        </a>
      {% endif %}
    </div>

    <div class="travel-articles__grid">
      {% for article in featured_blogs.value limit: section.settings.articles_limit %}
        {% if article %}
        <a href="{{ article.url }}" class="travel-article-card">

          <div class="travel-article-card__image-wrapper">
            {% if article.image %}
              <img src="{{ article.image | image_url: width: 600 }}"
                   alt="{{ article.image.alt | default: article.title | escape }}"
                   width="{{ article.image.width }}"
                   height="{{ article.image.height }}"
                   class="travel-article-card__image"
                   loading="lazy">
            {% else %}
              <div class="travel-article-card__image" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
            {% endif %}
          </div>

          <div class="travel-article-card__content">
            <h3 class="travel-article-card__title">{{ article.title | truncate: 60 }}</h3>

            <div class="travel-article-card__excerpt">
              {% if section.settings.show_excerpt and article.excerpt_or_content %}
                {{ article.excerpt_or_content | strip_html | truncate: 100 }}
              {% endif %}
            </div>

            <span class="travel-article-card__button">
              Read Article
            </span>
          </div>

        </a>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "Travel Articles",
  "class": "travel-collection-articles-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "paragraph",
      "content": "Articles are pulled from collection.metafields.travel.featured_blogs"
    },
    {
      "type": "checkbox",
      "id": "show_heading",
      "label": "Show section heading",
      "default": true
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Section heading",
      "default": "Articles"
    },
    {
      "type": "checkbox",
      "id": "show_subheading",
      "label": "Show subheading",
      "default": true
    },
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading text",
      "default": "Explore our other world-class fly fishing adventures around the globe."
    },
    {
      "type": "range",
      "id": "articles_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Maximum articles to display",
      "default": 3
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button text",
      "default": "See All Articles"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "Button URL",
      "info": "Link to your blog or articles page (defaults to /blogs/all if empty)"
    },
    {
      "type": "header",
      "content": "Article Card Display"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "text",
      "id": "read_more_text",
      "label": "Button text",
      "default": "Read Article"
    }
  ],
  "presets": [
    {
      "name": "Travel Collection Articles"
    }
  ]
}
{% endschema %}
