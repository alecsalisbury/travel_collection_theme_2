<div class="product-block" data-block-type="bundle_summary" {{ block.shopify_attributes }}>
  <div class="card card--tight bb-mini">
    <div class="card__section">
      <div class="bb-mini__rows" role="group" aria-label="Bundle summary">
        <div class="bb-mini__row">
          <span class="bb-mini__label">Items</span>
          <span class="bb-mini__value"><span class="bb-summary__items">0</span></span>
        </div>
        <div class="bb-mini__row bb-mini__row--subtotal">
          <span class="bb-mini__label">Subtotal</span>
          <span class="bb-mini__value"><span class="bb-summary__price">$0.00</span></span>
        </div>
      </div>

      <div class="product-form__buttons" style="margin-top:14px">
        <button class="button button--primary button--full bb-add-all" type="button">Add All to Cart</button>
      </div>
    </div>
  </div>
</div>

