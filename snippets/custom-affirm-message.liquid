  // Calculate monthly payment (simple estimate: price / 12)
  function calculateMonthlyPayment(priceInCents) {
    const months = 12;
    const monthlyAmount = priceInCents / months / 100;
    return '$' + monthlyAmount.toFixed(0);
  }

  // Initialize the message
  function initAffirmMessage() {
    const messageContainer = document.querySelector('.custom-affirm-message');
    if (!messageContainer) return;

    const priceInCents = parseInt(messageContainer.getAttribute('data-product-price')) || 0;
    const priceElement = document.querySelector('.custom-affirm-message__price');
    const logoContainer = document.querySelector('#custom-affirm-logo-container');

    if (!priceElement || !logoContainer) return;

    // Calculate and display monthly price immediately
    const monthlyPrice = calculateMonthlyPayment(priceInCents);

    priceElement.textContent = monthlyPrice;
    logoContainer.innerHTML = affirmLogoSvg;

    console.log('[AFFIRM] Custom message initialized with price:', monthlyPrice);
  }

  // Set up modal triggers
  function setupModalTriggers() {
    const triggers = document.querySelectorAll('.affirm-modal-trigger');

    triggers.forEach(function(trigger) {
      trigger.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();

        console.log('[AFFIRM] Modal trigger clicked');

        const amount = parseInt(trigger.getAttribute('data-amount')) || 0;

        if (window.affirm && window.affirm.ui && window.affirm.ui.ready) {
          window.affirm.ui.ready(function() {
            console.log('[AFFIRM] Opening Affirm modal with amount:', amount);

            // Use Affirm's promos.open method to trigger the modal
            if (window.affirm.ui.promos && typeof window.affirm.ui.promos.open === 'function') {
              window.affirm.ui.promos.open({
                amount: amount,
                modalId: 'learn-modal'
              });
            } else {
              console.log('[AFFIRM] Fallback: Opening Affirm info page');
              window.open('https://www.affirm.com/how-it-works', '_blank', 'noopener,noreferrer');
            }
          });
        } else {
          console.log('[AFFIRM] Affirm.js not loaded, opening fallback URL');
          window.open('https://www.affirm.com/how-it-works', '_blank', 'noopener,noreferrer');
        }
      });
    });

    console.log('[AFFIRM] Set up', triggers.length, 'modal triggers');
  }

  // Update price when variant changes
  function updatePriceOnVariantChange(newPrice) {
    const messageContainer = document.querySelector('.custom-affirm-message');
    const priceElement = document.querySelector('.custom-affirm-message__price');

    if (messageContainer && priceElement) {
      messageContainer.setAttribute('data-product-price', newPrice);
      const monthlyPrice = calculateMonthlyPayment(newPrice);
      priceElement.textContent = monthlyPrice;

      // Update data-amount on all triggers
      document.querySelectorAll('.affirm-modal-trigger').forEach(function(trigger) {
        trigger.setAttribute('data-amount', newPrice);
      });

      console.log('[AFFIRM] Updated price to:', monthlyPrice);
    }
  }

  // Re-initialize after DOM changes (e.g., when price block is replaced)
  function reinitAfterDOMChange() {
    const messageContainer = document.querySelector('.custom-affirm-message');
    if (!messageContainer) return;

    const priceInCents = parseInt(messageContainer.getAttribute('data-product-price')) || 0;
    const priceElement = document.querySelector('.custom-affirm-message__price');
    const logoContainer = document.querySelector('#custom-affirm-logo-container');

    if (priceElement && logoContainer) {
      const monthlyPrice = calculateMonthlyPayment(priceInCents);
      priceElement.textContent = monthlyPrice;
      logoContainer.innerHTML = affirmLogoSvg;

      // Re-setup modal triggers after reinit
      setupModalTriggers();

      console.log('[AFFIRM] Re-initialized after DOM change with price:', monthlyPrice);
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initAffirmMessage();
      setupModalTriggers();
    });
  } else {
    initAffirmMessage();
    setupModalTriggers();
  }

  // Listen for variant changes
  document.addEventListener('variant:changed', function(e) {
    if (e.detail && e.detail.variant && e.detail.variant.price) {
      updatePriceOnVariantChange(e.detail.variant.price);
    }
  });

  document.addEventListener('product:variant:change', function(e) {
    if (e.detail && e.detail.variant && e.detail.variant.price) {
      updatePriceOnVariantChange(e.detail.variant.price);
    }
  });

  // Listen for DOM changes (when price block is replaced)
  document.addEventListener('product:rerendered', function() {
    console.log('[AFFIRM] Product rerendered, re-initializing...');
    reinitAfterDOMChange();
  });

})();
</script>
